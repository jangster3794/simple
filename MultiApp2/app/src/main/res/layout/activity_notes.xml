<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notes">

    <Button
        android:id="@+id/note1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="54dp"
        android:onClick="note1"
        android:text="Note 1"
        app:layout_constraintBottom_toTopOf="@+id/note2"
        app:layout_constraintEnd_toEndOf="@+id/note2"
        app:layout_constraintStart_toStartOf="@+id/note2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/note2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="138dp"
        android:onClick="note2"
        android:text="Note 2"
        app:layout_constraintBottom_toTopOf="@+id/note4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note1" />

    <Button
        android:id="@+id/note3"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:onClick="note3"
        android:text="Note 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/note4"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_marginBottom="59dp"
        android:onClick="note4"
        android:text="Note 4"
        app:layout_constraintBottom_toTopOf="@+id/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note2" />

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:onClick="home"
        android:text="Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note4" />
</android.support.constraint.ConstraintLayout>